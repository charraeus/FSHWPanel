{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "PlatformIO",
            "task": "Build",
            "problemMatcher": [
                "$platformio"
            ],
            "group": "build",
            "label": "PlatformIO: Build"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: avr-gcc Aktive Datei kompilieren",
